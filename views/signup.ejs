<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/styles/signup.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/scripts/signup.js" defer></script>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="content">
        <div class="login-box">
            <div class="login-title fs-larger"><i class="fa-solid fa-user-plus"></i></div>
            <form class="login-form">
                <div class="input-container">
                    <input class="box-input" type="text" id="name" name="name" placeholder="Full Name" required>
                </div>
                <div class="input-container">
                    <input class="box-input" type="text" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="input-container">
                    <input class="box-input" type="text" id="username" name="username" placeholder="Username">
                </div>
                <div class="input-container">
                    <input class="box-input" type="password" id="password" name="password" placeholder="Password" required>
                </div>
                <div class="btn-container">
                    <button class="submit-btn">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>